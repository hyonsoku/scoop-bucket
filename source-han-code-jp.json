{
    "homepage": "https://github.com/adobe-fonts/source-han-code-jp",
    "description": "Japanese monospace font for programming",
    "license": "OFL-1.1",
    
    "version": "2.011",
    "url": "https://github.com/adobe-fonts/source-han-code-jp/archive/2.011R.zip",
    "hash": "0f98beb0a381d9d19067f9b58f65d2dd65c808a3012ac9cb9866e575ad6d2e7f",
    "checkver": {
        "url": "https://github.com/adobe-fonts/source-han-code-jp/releases/latest",
        "re": "archive/(?<version>[\\d.]+)R.zip"
    },
    "autoupdate": {
        "url": "https://github.com/adobe-fonts/source-han-code-jp/archive/$versionR.zip",
        "extract_dir": "source-han-code-jp-$versionR"
    },

    "extract_dir": "source-han-code-jp-2.011R",
    "installer": {
        "script": "
            Get-ChildItem $dir\\OTC -filter '*.ttc' | ForEach-Object {
                New-ItemProperty -Path '' -Name $_.Name.Replace($_.Extension, ' (TrueType)') -Value $_.Name -Force | Out-Null
                Copy-Item \"$_\" -destination \"$env:LocalAppData\\Microsoft\\Windows\\Fonts\"
            }
        "
    },
    "uninstaller": {
        "script": "
            Get-ChildItem $dir\\OTC -filter '*.ttc' | ForEach-Object {
                Remove-ItemProperty -Path '' -Name $_.Name.Replace($_.Extension, ' (TrueType)') -Force -ErrorAction SilentlyContinue
                Remove-Item \"$env:LocalAppData\\Microsoft\\Windows\\Fonts\\$($_.Name)\" -Force -ErrorAction SilentlyContinue
            }
            Write-Host \"The 'Sourece Han Code JP' Font family has been uninstalled and will not be present after restarting your computer.\" -Foreground Magenta
        "
    }
    
}